<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Notification-->
    <style name="notify_params">
        <item name="android:textColor">@color/notify_params_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/digital7</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="notify_lable">
        <item name="android:textColor">@color/notify_labile_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/digital7</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="start_stop_btn_stopped">
        <item name="backgroundTint">@color/startButtonColor</item>
        <item name="android:layout_marginStart">@dimen/start_stop_btn_h_margin</item>
        <item name="android:layout_marginEnd">@dimen/start_stop_btn_h_margin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/start_stop_btn_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/vertical_margin</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="small_text">
        <item name="android:layout_marginVertical">@dimen/vertical_margin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_text">
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin</item>
        <item name="android:layout_marginVertical">@dimen/vertical_margin</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">@dimen/normalTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_params">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_btn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginHorizontal">@dimen/dialog_btn_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="row_params_text">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


</resources>
